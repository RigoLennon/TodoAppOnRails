<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: ([@user, @todo]) do |f| %>

        <div class="form-group">
          <%= f.text_field :title, class: "form-control", placeholder: "Nombre de la Tarea" %>
        </div>

        <div class="form-group">
          <%= f.text_field :description, class: "form-control", placeholder: "Descripcion"%>
        </div>

        <%= f.submit "Crear Tarea", class: "btn btn-primary" %>

        <%end %>
    </div>
  </div>
</div>