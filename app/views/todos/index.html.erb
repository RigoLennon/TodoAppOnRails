<div class="container">
  <div class="row">

    <% @todos.each do |t|  %>

      <div class="col-md-4">

        <div class="card" style="width: 18rem;">

          <%= image_tag('success.png', class: "card-img-top") %>

          <div class="card-body">

            <h5 class="card-title"><%= t.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Por: <%= t.user.email %></h6>

            <%= link_to "Completado", user_todo_path(current_user, t), method: :delete, class: "btn btn-success" %>
            <%= link_to "Mostrar", user_todo_path(current_user, t), class: "btn btn-primary" %>
          </div>

        </div>

      </div>

    <% end %>

  </div>

</div>
